<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="32dp">

        <!-- App Logo with gradient shadow -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">

            <!-- Shadow layer -->
            <ImageView
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:alpha="0.3" />

            <!-- Main logo -->
            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@mipmap/ic_launcher" />
        </FrameLayout>

        <!-- App Title with gradient text effect -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="MoodChat"
            android:textSize="42sp"
            android:textStyle="bold"
            android:background="@drawable/gradient_text_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:elevation="4dp" />

        <!-- Login Form Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/form_card_background"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#15FFFFFF"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintTextColor="#8080FF"
                app:boxStrokeColor="#8080FF">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Password"
                app:endIconMode="password_toggle"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#15FFFFFF"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintTextColor="#8080FF"
                app:boxStrokeColor="#8080FF"
                app:endIconTint="#8080FF">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSignInWithEmail"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/gradient_button_background"
                android:elevation="4dp"
                android:text="Sign in with Email"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_email"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF" />

        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Not a user? Register here"
            android:textColor="#CCFFFFFF"
            android:background="@drawable/transparent_button_ripple" />

        <!-- Enhanced OR Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_divider" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="OR"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/or_text_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_divider" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSIWG"
            style="@style/GoogleButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/google_button_background"
            android:elevation="4dp"
            android:paddingHorizontal="24dp"
            android:text="Continue with Google"
            android:textColor="#333333"
            android:textStyle="bold"
            app:icon="@drawable/ic_google"
            app:iconGravity="start"
            app:iconPadding="8dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_loading_overlay_background"
        android:visibility="gone">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            app:indicatorColor="#8080FF"
            app:trackColor="#338080FF" />

    </RelativeLayout>

</FrameLayout>
