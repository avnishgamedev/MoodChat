<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient_background"
        android:elevation="12dp"
        app:elevation="12dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:title="MoodChat"
            app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            app:titleTextColor="@color/white"
            app:menu="@menu/menu_main"
            app:navigationIconTint="@color/white"
            android:paddingHorizontal="20dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Enhanced Empty State Container -->
        <LinearLayout
            android:id="@+id/emptyStateContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/form_card_background"
                android:elevation="8dp"
                android:padding="32dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_chat_empty"
                    app:tint="#8080FF"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to chat?"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start your first conversation\nby tapping the + button"
                    android:textSize="16sp"
                    android:textColor="#CCFFFFFF"
                    android:textAlignment="center"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Conversations RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvConversations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="16dp"
            android:paddingHorizontal="8dp"
            android:paddingBottom="100dp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

    <!-- Enhanced Gradient FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="New Chat"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white"
        app:iconSize="24dp"
        android:contentDescription="Start new conversation"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:backgroundTint="#8080FF"
        app:elevation="8dp"
        app:hoveredFocusedTranslationZ="12dp"
        app:cornerRadius="28dp" />

    <!-- Enhanced Loading Overlay -->
    <FrameLayout
        android:id="@+id/flLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loading_overlay_background"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/form_card_background"
            android:elevation="12dp"
            android:padding="40dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:indeterminate="true"
                app:indicatorColor="#8080FF"
                app:trackColor="#338080FF"
                app:indicatorSize="56dp"
                app:trackThickness="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading conversations..."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
