<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mcvMessage">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="2dp"
            android:background="@drawable/ic_person"
            app:civ_border_width="2dp"
            app:civ_border_color="?attr/colorSecondary" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:layout_constraintStart_toEndOf="@id/mcvProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="280dp">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_received_message"
            android:padding="16dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:lineSpacingMultiplier="1.2" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/material_dynamic_secondary60"
        android:textSize="11sp"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@id/mcvMessage"
        app:layout_constraintTop_toBottomOf="@id/mcvMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>
