<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_person"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF6B9D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mcvMessage" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#2A2A40"
        app:layout_constraintStart_toEndOf="@id/ivProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="280dp">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:lineSpacingMultiplier="1.2" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#CCFFFFFF"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/mcvMessage"
        app:layout_constraintTop_toBottomOf="@id/mcvMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>
